# Google Gemini API Configuration
# Get your API key from: https://makersuite.google.com/app/apikey
# Gemini API is used for PDF translation, Solution Generator, and MCQ Generator
GENAI_API_KEY=your_gemini_api_key_here
# Alternative variable name (either works)
GEMINI_API_KEY=your_gemini_api_key_here

# Optional: Specify Gemini model (default: models/gemini-2.0-flash)
GENAI_MODEL=models/gemini-2.0-flash
# Alternative variable name
GEMINI_MODEL=models/gemini-2.0-flash

# MongoDB Configuration
# For MongoDB Atlas (cloud), use mongodb+srv:// format (recommended):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
# 
# For local MongoDB:
# MONGODB_URI=mongodb://localhost:27017/
#
# Database name (optional, defaults to pdf_translation_db):
# MONGODB_DB_NAME=pdf_translation_db

# Streamlit Configuration
# Disable analytics/telemetry (prevents data forwarding to Fivetran)
# Alternative to .streamlit/config.toml - set this environment variable
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false

